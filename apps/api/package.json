{
	"name": "api",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"files": [
		"dist/"
	],
	"scripts": {
		"build": "tsc && tsup && pnpm run generate",
		"build:worker": "tsup src/worker.d1.ts --format esm --dts --clean --minify",
		"deploy": "wrangler deploy --compatibility-date=2024-07-29",
		"deploy:staging": "wrangler deploy --env staging --compatibility-date=2024-07-29",
		"dev": "nodemon -e ts,json --exec 'tsx src/serve.ts'",
		"dev:worker": "wrangler dev --compatibility-date=2024-07-29",
		"generate": "tsx ./src/scripts/generate-openapi.ts",
		"start": "node dist/serve.js"
	},
	"dependencies": {
		"@cloudflare/workers-types": "4.20250726.0",
		"@hono/node-server": "^1.14.1",
		"@hono/swagger-ui": "^0.5.1",
		"@hono/zod-openapi": "^0.19.6",
		"@hono/zod-validator": "^0.7.0",
		"@llmgateway/auth": "workspace:*",
		"@llmgateway/db": "workspace:*",
		"bcrypt-ts": "7.0.0",
		"better-auth": "1.2.7",
		"drizzle-zod": "0.7.1",
		"gateway": "workspace:*",
		"hono": "^4.7.6",
		"hono-openapi": "^0.4.6",
		"openai": "^4.104.0",
		"posthog-node": "4.18.0",
		"stripe": "18.1.1",
		"zod": "3.25.75",
		"zod-openapi": "^4.2.4"
	},
	"devDependencies": {
		"@types/node": "^24.0.3"
	}
}
